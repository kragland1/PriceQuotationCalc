@model PriceQuotationModel

@{ ViewData["Title"] = "Price Quotation"; }

<div class="container">
    <header class="jumbotron bg-success text-center mt-0 ">
        
    
    <h1 class="mt-3 text-white"><span class="fas fa-money-bill-alt"></span>&nbsp;@ViewBag.Title</h1>
    </header>
    <form asp-action="Index" method="post">
        <div class="row">
            <label asp-for="SalesPrice" class="col-md-3 col-form-label">
                Subtotal: </label>
            <div class="col-md-3">
                <input asp-for="SalesPrice" class="form-control" />
            </div>
            <span asp-validation-for="SalesPrice" 
                  class="col text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="DiscountPercent" class="col-md-3 col-form-label">
                Discount Percent:</label>
            <div class="col-md-3">
                <input asp-for="DiscountPercent" class="form-control" />
            </div>
            <span asp-validation-for="DiscountPercent"
                  class="col text-danger"></span>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">
                Discount Amount: </label>
            <label class="col-md-3 col-form-label">
                @ViewBag.D.ToString("C2")
            </label>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">Total:</label>
            <label class="col-md-3 col-form-label">
                @ViewBag.T.ToString("C2")
            </label>
        </div>
        <div class="row">
            <div class="col pl-0">
                <button type="submit" class="btn btn-success">
                    Calculate</button>
                <a asp-action="Index"
                   class="btn btn-success">Clear</a>
            </div>
        </div>
    </form>
</div>
